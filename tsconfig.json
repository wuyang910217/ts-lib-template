{
  "include": ["src", "types"],
  "compilerOptions": {
    "target": "es5",
    "module": "ES2015",
    "lib": ["dom", "ESNext"],
    "importHelpers": true,
    // "removeComments": true,
    "declaration": true,
    "sourceMap": false,
    "rootDir": "./src",
    "outDir": "dist/",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "jsx": "react",
    "paths": {
      "*": ["src/*", "node_modules/*"]
    },
    "esModuleInterop": true
  }
}
